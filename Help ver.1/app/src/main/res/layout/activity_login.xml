<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_entire_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/simbol">
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="11.5"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="450dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view6"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="아이디"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/white" />

            <View
                android:id="@+id/view7"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view8"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/white" />

            <View
                android:id="@+id/view9"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/View5"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="264dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_button"
            tools:layout_editor_absoluteX="101dp" />
        <View
            android:id="@+id/View6"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="138dp"
                android:layout_height="29dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/ask1" />
            <View
                android:id="@+id/View7"
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/signup"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:background="@drawable/signup_button"
                android:layout_marginLeft="20dp"
                android:onClick="bt_signup" />

        </LinearLayout>

        <Button
            android:id="@+id/just"
            android:layout_width="67dp"
            android:layout_height="23dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/just_button"
            android:onClick="bt_just"
            android:textSize="50dp" />

    </LinearLayout>
</LinearLayout>